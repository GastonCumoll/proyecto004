{% extends 'base1.html.twig' %}

{% block title %}Edicion{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('crudCss') }}
{% endblock  %}
{% block body %}
<h1 class="font-weight-bold text-center">Edicion</h1>
    <div class="container">
        <div class="mt-3 p-3 border border-secondary rounded bg-light">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ edicion.id }}</td>
            </tr>
            <tr>
                <th>Fecha de edicion</th>
                <td>{{ edicion.fechaDeEdicion ? edicion.fechaDeEdicion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cantidad de impresiones</th>
                <td>{{ edicion.cantidadImpresiones }}</td>
            </tr>
            <tr>
                <th>Fecha y hora creacion</th>
                <td>{{ edicion.fechaYHoraCreacion ? edicion.fechaYHoraCreacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <div class="row mt-5" >
            <div class="col-4 mt-4">
                <a href="{{ path('edicion_index') }}">
                    <button type="button" class="btn btn-info"> Back to list <i class="fas fa-arrow-left"></i> </button>  
                </a>
            </div>
    
            <div class="col-4 text-center mt-4">
                <a href="{{ path('edicion_edit', {'id': edicion.id}) }}">
                    <button type="button" class="btn btn-success"> Edit <i class="fas fa-edit"></i></button> 
                    <br><br>
                </a>
            </div>
    
            <div class="col-4 text-right mt-4">
                {{ include('edicion/_delete_form.html.twig') }}
            </div>
    
        </div>
    </div>

</div>
</div>
{% endblock %}
