{% extends 'base1.html.twig' %}

{% block title %}Suscripcion index{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('index') }}
{% endblock  %}

{% block body %}
<div class="w-75 mb-2 m-auto">
    <h1 class="font-weight-bold text-center">Suscripciones</h1>

    <div class="border border-secondary rounded p-3 shadow mb-5 bg-white ">
        <table class="table table-striped table-bordered  table-hover" id="datatable">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Tipo de suscripci√≥n</th>
                    <th>Fecha de suscripcion</th>
                    <th>Usuario</th>
                    <th class="text-center">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for suscripcion in suscripcions %}
                <tr>
                    <td>{{ suscripcion.id }}</td>
                    <td>{{ suscripcion.tipoPublicacion }}</td>
                    <td>{{ suscripcion.fechaSuscripcion ? suscripcion.fechaSuscripcion|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ suscripcion.getUsuario }}</td>
                    <td class="text-center">
                        <a href="{{ path('suscripcion_show', {'id': suscripcion.id}) }}">
                            <button type="button" class="btn btn-outline-primary btn-boton">Show</button>
                        </a>
                        <a href="{{ path('suscripcion_edit', {'id': suscripcion.id}) }}">
                            <button type="button" class="btn btn-outline-info btn-boton">Edit</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br><br>
        <a href="{{ path('suscripcion_new') }}"><button type="button" class="btn btn-outline-primary btn-boton">Crear</button></a> 
    </div>
</div>


{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('index') }}
{% endblock %}
