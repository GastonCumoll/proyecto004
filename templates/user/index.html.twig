{% extends 'base1.html.twig' %}

{% block title %}User index{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('index') }}
{% endblock  %}

{% block body %}

<div class="w-75 mb-2 m-auto">
    <h1 class="font-weight-bold text-center">Usuarios registrados</h1>

    <div class="border border-secondary rounded p-3">
        <table class="table table-striped table-bordered  table-hover" id="datatable">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for User in users %}
                <tr>
                    <td>{{ User.id }}</td>
                    <td>{{ User.email }}</td>
                    <td>{{ User.roles ? User.roles|json_encode : '' }}</td>
                    <td>{{ User.password }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': User.id}) }}">
                            <button type="button" class="btn btn-outline-primary btn-boton">Show</button>
                        </a>
                        <a href="{{ path('user_edit', {'id': User.id}) }}">
                            <button type="button" class="btn btn-outline-info btn-boton">Edit</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br><br>
        <a href="{{ path('user_new') }}"><button type="button" class="btn btn-outline-primary btn-boton">Crear</button></a>
    </div>
</div>

    
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('index') }}
{% endblock %}
