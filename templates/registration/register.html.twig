{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('loginCss') }}
{% endblock  %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container"> 
    <div class="mt-5 p-3 border border-secondary rounded bg-light">
        <h2 class="text-center font-weight-bold mt-3 mb-3">Register</h2>
        
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <div class="text-center"><button type="submit" class="btn btn-success btn-lg"><i class="fas fa-user-plus"></i> Register</button ></div>
        
    {{ form_end(registrationForm) }}
    </div></div>
{% endblock %}
