{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container" style="font-family: Arial, Helvetica, sans-serif; margin-top:10rem;">
    <div class="mt-5 p-3 border border-secondary rounded bg-light">
        <form action="{{ path('login') }}" method="post">
            <h2 class="text-center font-weight-bold mt-3 mb-3">Iniciar Sesión</h2>
            <div class="form-group">
                <label for="username">Email:</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="_password" />
            </div>
            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account" /> #}
            <div class="" style="text-align:center;">
                <button type="submit" class="btn btn-primary btn-lg">Iniciar sesión <i
                    class="fas fa-sign-in-alt"></i>
                </button>
            </div>
            <br>
            <div class="" style="text-align:center;">
                <a href="{{ path('app_register')}}"> 
                    ¿Olvidaste tu contraseña?
                </a>
            </div>
            <hr>
            <div class="" style="text-align: center;">
                <a class="btn btn-success" href="{{ path('app_register')}}" role="button"> 
                    Crear cuenta nueva
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}