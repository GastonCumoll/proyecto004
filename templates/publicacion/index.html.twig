{% extends 'base1.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('index') }}
{% endblock  %}

{% block title %}Publicacion index{% endblock %}

{% block body %}

    <div class="w-75 mb-2 m-auto">
        <h1 class="font-weight-bold text-center">Publicaciones</h1>
        <div class="border border-secondary rounded p-3 shadow mb-5 bg-white rounded">
            <table class="table table-striped table-bordered  table-hover" id="datatable">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Tipo Publicacion</th>
                <th>Usuario Creador</th>
                <th>Fecha Y Hora</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicacion in publicacions %}
            <tr>
                <td>{{ publicacion.id }}</td>
                <td>{{ publicacion.titulo }}</td>
                <td>{{ publicacion.tipoPublicacion }}</td>
                <td>{{ publicacion.usuarioCreador }}</td>
                <td>{{ publicacion.fechaYHora ? publicacion.fechaYHora|date('Y-m-d H:i:s') : '' }}</td>
                
                <td class="text-center">
                    <a href="{{ path('publicacion_show', {'id': publicacion.id}) }}"><button type="button" class="btn btn-outline-primary btn-boton">Show</button></a>
                    <a href="{{ path('publicacion_edit', {'id': publicacion.id}) }}"><button type="button" class="btn btn-outline-info btn-boton">Edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
    <a href="{{ path('publicacion_new') }}"><button type="button" class="btn btn-outline-primary btn-boton">Crear</button></a>
    </div>
</div>

{% endblock %}
{% block javascripts %}
{{ encore_entry_script_tags('index') }}
{% endblock %}
